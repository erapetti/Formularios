<div id="admin">

  <h1> <%= config.titulo %> </h1>

  <form method="post" id="adminForm">

    <div class="panel panel-default content">
      <div class="panel-body">
        <table class="table formularios">
          <tr>
            <th>Id</th>
            <th>Título</th>
            <th>Desde</th>
            <th>Hasta</th>
            <th>Recibidos</th>
            <th>Acciones</th>
          </tr>
          <% config.forEach(function(item){ %>
            <tr formid="<%= item.formid %>">
              <td>
                <%= item.formid %>
              </td><td>
                <%= item.titulo %>
              </td><td>
                  <% if (item.desde) { %><%= item.desde.toString() %><% } %>
                </td><td>
                  <% if (item.hasta) { %><%= item.hasta.toString() %><% } %>
                </td><td style="text-align:center">
                  <span class="badge">
                    <%= cantidad[item.formid]>0 ? cantidad[item.formid] : 0 %>
                  </span>
                </td>
                <td style="text-align:center">
                  <a href="admin/download?id=<%= item.formid %>"<% if (!(cantidad[item.formid]>0)) { %> class="disabled"<% } %>><span class="glyphicon glyphicon-download-alt" aria-hidden="true"></span></a>
                  &nbsp;
                  <a href="#" edit="<%= item.formid %>"<% if (cantidad[item.formid]>0) { %> class="disabled"<% } %> data-toggle="modal" data-target="#myModal"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                  &nbsp;
                  <a href="#" dest="admin/clonar" data="<%= item.formid %>"><span class="glyphicon glyphicon-duplicate" aria-hidden="true"></span></a>
                  &nbsp;
                  <a href="#" dest="admin/borrar" data="<%= item.formid %>"<% if (cantidad[item.formid]>0) { %> class="disabled"<% } %>><span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span></a>
                <td>
              </tr>
          <% }) %>
        </table>
      </div>
    </div>

  </form>


<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Edición de formularios</h4>
      </div>
      <div class="modal-body">
        <table>
          <tr>
            <th>Id:</th>
            <td><input type="text" class="form-control" placeholder="Título del formulario" name="id" readonly="readonly"></td>
          </tr><tr>
            <th>Título:</th>
            <td><input type="text" class="form-control" placeholder="Título del formulario" name="titulo"></td>
          </tr><tr>
            <th>Desde:</th>
            <td><input type="text" class="form-control" placeholder="fecha de inicio" name="desde"></td>
          </tr><tr>
            <th>Hasta:</th>
            <td><input type="text" class="form-control" placeholder="fecha de fin (inclusive)" name="hasta"></td>
          </tr>
        </table>
        <div id="message" class="alert alert-danger hidden"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-default" id="modalSubmit">Enviar</button>
      </div>
    </div>

  </div>
</div>


</div>
