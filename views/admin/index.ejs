<div id="admin">

  <h1> <%= config.titulo %> </h1>

  <form method="post" id="adminForm">

    <div class="panel panel-default content">
      <div class="panel-body">
        <table class="table formularios">
          <tr>
            <th>Id</th>
            <th>Título</th>
            <th>Desde</th>
            <th>Hasta</th>
            <th>Recibidos</th>
            <th>Acciones</th>
          </tr>
          <% config.forEach(function(item){ %>
            <tr formid="<%= item.formid %>">
              <td>
                <%= item.formid %>
              </td><td>
                <%= item.titulo %>
              </td><td date="<% if (item.desde) { %><%= item.desde.fecha_edit_toString() %><% } %>">
                  <% if (item.desde) { %><%= item.desde.fecha_toString() %><% } %>
                </td><td date="<% if (item.hasta) { %><%= item.hasta.fecha_edit_toString() %><% } %>">
                  <% if (item.hasta) { %><%= item.hasta.fecha_toString() %><% } %>
                </td><td>
                  <span class="badge">
                    <%= cantidad[item.formid]>0 ? cantidad[item.formid] : 0 %>
                  </span>
                </td>
                <td class="acciones">
                  <a href="download?id=<%= item.formid %>"<% if (!(cantidad[item.formid]>0)) { %> class="disabled"<% } %> title="descargar"><span class="glyphicon glyphicon-download-alt" aria-hidden="true"></span></a>
                  <a href="#" preview="<%= item.formid %>" dest="../?preview=on" data-toggle="modal" data-target="#preview" title="previsualizar"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
                  <a href="#" edit="<%= item.formid %>" data-toggle="modal" data-target="#myModal" title="editar"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                  <a href="#" dest="clonar" data="<%= item.formid %>" title="duplicar"><span class="glyphicon glyphicon-duplicate" aria-hidden="true"></span></a>
                  <a href="#" dest="borrar" data="<%= item.formid %>"<% if (cantidad[item.formid]>0) { %> class="disabled"<% } %> title="borrar"><span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span></a>
                <td>
              </tr>
          <% }) %>
        </table>
      </div>
    </div>

  </form>


<!-- Edit -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Edición de formularios</h4>
      </div>
      <div class="modal-body">
        <table>
          <tr>
            <th>Id:</th>
            <td><input type="text" class="form-control" placeholder="Título del formulario" name="id" readonly="readonly"></td>
          </tr><tr>
            <th>Título:</th>
            <td><input type="text" class="form-control" placeholder="Título del formulario" name="titulo"></td>
          </tr><tr>
            <th>Desde:</th>
            <td><input type="text" class="form-control" placeholder="fecha de inicio en formato AAAA-MM-DD" name="desde"></td>
          </tr><tr>
            <th>Hasta:</th>
            <td><input type="text" class="form-control" placeholder="fecha de fin (inclusive) en formato AAAA-MM-DD" name="hasta"></td>
          </tr>
        </table>
        <div id="message" class="alert alert-danger"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-default" id="modalSubmit">Enviar</button>
      </div>
    </div>
  </div>
</div>

<!-- Preview -->
<div id="preview" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Previsualización de formularios</h4>
      </div>
      <div class="modal-body">
        <iframe></iframe>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>

</div>
