<tr>
  <td class="col-sm-3">
    <span class="input-group-addon" id="campo-<%= m.id%>"><%- m.etiqueta %>:</span>
  </td><td class="col-sm-6">
    <input type="hidden" class="<%= m.modid %>" id="dd-<%= m.id%>" name="<%= m.nombre %>" value="<% if (m.value) {%><%= m.value %><% } %>"<% if (m.validador) { %> validate="<%= m.validador %>"<% } %><% if (m.opcional) { %> optional="true"<% } %>>
    <div class="dropdown">
      <button class="btn btn-default dropdown-toggle" type="button" id="btn-dd-<%= m.id%>" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        Seleccione una opci√≥n
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" dd="<%= m.id %>" aria-labelledby="btn-dd-<%= m.id%>">
        <% m.options.forEach(function(dependencia){ -%>
          <li><a data="<%= dependencia.DependId %>" dd="<%= m.id %>" href="#"><%= dependencia.DependDesc %></a></li>
        <% }) %>
      </ul>
    </div>
  </td><td class="col-sm-3">
    <% if (m.ayuda !== null) { %><%= m.ayuda %><% } %>
  </td>
</tr>
